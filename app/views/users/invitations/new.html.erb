<div class="row">
  <div class="col-lg-6 col-md-6 ml-auto mr-auto">
    <div class="ui-block shadow-lg rounded bg-white">
      <div class="ui-block-content">
        <h1 class="text-center"><%= t "devise.invitations.new.header" %></h1>

        <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <% resource.class.invite_key_fields.each do |field| %>
            <div class="form-group">
              <%= f.label field, class: "form-label" %>
              <%= f.text_field field, class: 'form-control', placeholder: field.to_s.titleize %>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary btn-block btn-lg" %>
          </div>
        <% end %>

        <div class="text-center">
        </div>
      </div>
    </div>
  </div>
</div>
