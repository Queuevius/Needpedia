                    </div>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal post list -->
  <div class="modal fade" id="Post_list" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Group list</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="table-responsive mb-10">
            <table class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th>Title</th>
                <th>Post type</th>
                <th>Created at</th>
                <th>User</th>
              </tr>
              </thead>

              <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td>
                    <%= link_to post.title, post_path(post.id) %>
                  </td>
                  <td>
                    <%= post.post_type %>
                  </td>
                  <td>
                    <%= post.created_at.strftime('%Y-%m-%d') %>
                  </td>
                  <td>
                    <%= link_to post.user.name, wall_path(uuid: post.user.uuid) %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
