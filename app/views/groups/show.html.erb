<div class="page-header">

  <div class="row">
    <div class="col-6">
      <%= link_to groups_path, class: 'btn btn-default' do %>
        Back to Groups
      <% end %>
      <% if current_user == @group.user %>
        <%= link_to edit_group_path(@group), class: 'btn btn-primary' do %>
          Edit
        <% end %>
      <% end %>
    </div>
    <% if current_user == @group.user %>
      <div class="col">
        <% if @requests.present? %>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#request">
            Request List
          </button>
        <% end %>
      </div>
      <div class="col">
        <div class="align-content-end">
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
            Invite Users
          </button>
        </div>
      </div>

      <% if @members.present? %>
        <div class="col">
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Member">
            Members
          </button>
        </div>
      <% end %>
    <% end %>
    <% unless current_user == @group.user || @group.requests.exists?(user_id: current_user.id) || @group.members.exists?(id: current_user.id) %>
      <div class="col">
        <%= link_to "Request to Join", request_to_join_group_path(@group), method: :post, class: "btn btn-primary" %>
      </div>
    <% end %>
    <% if current_user && @group.memberships.exists?(user_id: current_user.id) %>
      <%= link_to 'Leave Group', leave_group_group_path(@group), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
    <% end %>
    <% if @current_user_invitation.present? %>
      <%= link_to "Join Group", join_group_path(@group, invitation_id: @current_user_invitation.id), method: :post %>
    <% end %>
    <% if @posts.present? %>
      <div class="col">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Post_list">
          Posts list
        </button>
      </div>
    <% end %>
  </div>
  <div class="container-sm mt-3">
    <h1 class="text-center">Show group</h1>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <div class="container-sm">
          <%= image_tag @group.logo, class: 'card-img-top' if @group.logo.attached? %>
        </div>
        <dl class="dl-horizontal mt-4">
          <dt class="mb-2">Name:</dt>
          <dd class="mb-2"><%= @group.name %></dd>

          <dt class="mb-2">Group admin:</dt>
          <dd class="mb-2"><%= @group.user.name %></dd>
        </dl>
      </div>
    </div>
  </div>


  <!-- invite Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Invite people</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container bootdey">

            <div class="user-widget-2">
              <ul class="list-unstyled">
                <% @users_not_in_group.each do |user| %>
                  <% next if user == current_user || @group.invitations.find_by(user_id: user.id) %>
                  <li class="media">
                    <% if user.profile_image.attached? %>
                      <%= image_tag(user.profile_image, class: 'rounded-circle d-flex align-self-center', alt: "Avatar") %>
                    <% else %>
                      <img class="rounded-circle d-flex align-self-center" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <% end %>
                    <div class="media-body">
                      <h5><%= user.name %></h5>
                      <p>
                        <%= link_to invite_user_to_group_group_path(user_id: user.id, group_id: @group.id), method: :post do %>
                          <span class="badge badge-outline badge-sm badge-info badge-pill">Invite</span>
                        <% end %>

                      </p>
                    </div>
                    <i class="d-flex align-self-center fa fa-dot-circle-o color-success"></i></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal request list -->
  <div class="modal fade" id="request" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Requests List</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container mt-3 mb-4">
            <div class=" mt-4 mt-lg-0">
              <h3 class="text-center">Requests List</h3>
              <div class="row">
                <div class="col-md-12">
                  <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
                    <div class="container bootdey">
                      <div class="user-widget-2">
                        <ul class="list-unstyled">
                          <% @requests.each do |request| %>
                            <li class="media">
                              <% if request.user.profile_image.attached? %>
                                <%= image_tag(request.user.profile_image, class: 'rounded-circle d-flex align-self-center', alt: "Avatar") %>
                              <% else %>
                                <img class="rounded-circle d-flex align-self-center" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                              <% end %>
                              <div class="media-body">
                                <h5><%= request.user.name %></h5>
                                <p><span class="badge badge-outline badge-sm badge-info badge-pill"><%= link_to accept_request_group_path(@group, request), method: :post do %>
                                <i class="fas fa-check"></i>
                              <% end %></span>
                                  <span class="badge badge-outline badge-sm badge-danger badge-pill"><%= link_to reject_request_group_path(@group, request), method: :delete, data: {confirm: 'Are you sure?'}, class: "text-danger" do %>
                                <i class="far fa-trash-alt"></i>
                              <% end %></span>
                                </p>
                              </div>
                          <% end %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal member list -->
  <div class="modal fade" id="Member" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Members List</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container bootdey">
            <div class="user-widget-2">
              <ul class="list-unstyled">
                <% @members.each do |member| %>
                  <li class="media">
                    <% if member.profile_image.attached? %>
                      <%= image_tag(member.profile_image, class: 'rounded-circle d-flex align-self-center', alt: "Avatar") %>
                    <% else %>
                      <img class="rounded-circle d-flex align-self-center" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <% end %>
                    <div class="media-body">
                      <h5 class="mt-4"><%= link_to member.name, wall_path(uuid: member.uuid) %></h5>
                    </div>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal post list -->
  <div class="modal fade" id="Post_list" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Group list</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="table-responsive mb-10">
            <table class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th>Title</th>
                <th>Post type</th>
                <th>Created at</th>
                <th>User</th>
              </tr>
              </thead>

              <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td>
                    <%= link_to post.title, post_path %>
                  </td>
                  <td>
                    <%= post.post_type %>
                  </td>
                  <td>
                    <%= post.created_at.strftime('%Y-%m-%d') %>
                  </td>
                  <td>
                    <%= link_to post.user.name, wall_path(uuid: post.user.uuid) %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


