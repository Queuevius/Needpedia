<div class="card mb-1">
  <div class="card-body">
    <h5>
      <%= actor == current_user ? 'You' : link_to(actor.name, wall_path(uuid: actor.uuid)) %>
      accepted
      <%= notification.recipient == current_user ? 'your' : link_to(notification.recipient.name, wall_path(uuid: actor.uuid)) %>
      request to join <%= link_to notification.notifiable&.name, group_path(notifiable.id) %> group
    </h5>
    <em class="text-muted"><%= notification.created_at.strftime('%e %b %Y %H:%M %p') %></em>
  </div>
</div>
