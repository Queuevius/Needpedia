<div class="card mb-1">
  <div class="card-body">
    <h5><%= link_to "#{actor.name}", wall_path(uuid: actor.uuid) %> has invite you to <%= link_to notification.group&.name, group_path(notification.group_id) if notification.group_id.present? %> </h5>
    <em class="text-muted"><%= notification.created_at.strftime('%e %b %Y %H:%M %p') %></em>
  </div>
</div>
