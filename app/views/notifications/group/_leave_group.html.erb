<div class="card mb-1">
  <div class="card-body">
    <h5><%= link_to "#{actor.name}", wall_path(uuid: actor.uuid) %> left the <%= link_to notification.notifiable&.name, group_path(notification.notifiable.id) if notification.notifiable.present? %>  group </h5>
    <em class="text-muted"><%= notification.created_at.strftime('%e %b %Y %H:%M %p') %></em>
  </div>
</div>
