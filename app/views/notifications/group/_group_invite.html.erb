<div class="card mb-1">
  <div class="card-body">
    <h5><%= link_to "#{actor.name}", wall_path(uuid: actor.uuid) %> has invited
      <% if notification.recipient == current_user %>
        you
      <% else %>
        <%= link_to "#{notification.recipient.name}", wall_path(uuid: actor.uuid) %>
      <% end %>
      to join <%= link_to notification.notifiable&.name, group_path(notification.notifiable) if notification.notifiable.present? %> group </h5>
    <em class="text-muted"><%= notification.created_at.strftime('%e %b %Y %H:%M %p') %></em>
  </div>
</div>
