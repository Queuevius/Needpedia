<div id="tracking-post-modal" class="modal fade" role="dialog">
  <div class="modal-dialog  modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Notification Events</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <%= form_with(url: post_track_post_path(@post.id), method: 'patch') do |form| %>
        <div class="modal-body">

          <%= form.hidden_field :user_id, value: current_user.id %>
          <%= form.hidden_field :post_id, value: @post.id %>

          <div class="form-group m-3 p-3">
            <%= form.check_box :edit_post, class: "form-check-input" %>
            <h5 class="ml-3">When someone edits this post (public layer only)</h5>
          </div>

          <div class="form-group m-3 p-3">
            <%= form.check_box :expert_layer, class: "form-check-input" %>
            <h5 class="ml-3">When someone adds or edits expert layers</h5>
          </div>

          <% if @post.post_type != Post::POST_TYPE_IDEA %>
            <div class="form-group m-3 p-3">
              <%= form.check_box :related_wiki_post, class: "form-check-input" %>
              <h5 class="ml-3">When someone adds a related wiki post</h5>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <%= form.submit 'Submit', class: 'btn btn-primary'  %>
        </div>

      <% end %>
    </div>

  </div>
</div>